mixin metatagsWebApp()
  -var mobileColor = '#1C5DAB'
  -var favicon = './img/favicon.ico'
  -var logoPNG = './img/logo.png'
  -var title = 'MyPWA'
  meta(name="HandheldFriendly", content="true")
  meta(name="MobileOptimized", content="320")
  meta(name="theme-color", content=mobileColor)
  //- Apple tags
  meta(name="apple-mobile-web-app-capable", content="yes")
  meta(name="apple-mobile-web-app-status-bar-style", content="default")
  meta(name="apple-mobile-web-app-title", content=title)
  link(rel="apple-touch-startup-image", href=logoPNG)
  link(rel="apple-touch-icon", href=logoPNG)
  //- MS tags
  meta(name="msapplication-TileImage", content=logoPNG)
  meta(name="msapplication-TileColor", content=mobileColor)
  link(rel="icon", type="image/x-icon", href=favicon)
  link(rel="icon", type="image/png", href=logoPNG)
  link(rel="author", type="text/plain", href="./humans.txt")
  link(rel="sitemap", type="application/xml", title="Sitemap", href="./sitemap.xml")
  //- Manifest.js
  link(rel="manifest", href="./manifest.json")
